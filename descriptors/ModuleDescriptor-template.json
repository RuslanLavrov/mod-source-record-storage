{
  "id": "${artifactId}-${version}",
  "name": "Source Record Storage Module",
  "requires": [],
  "provides": [
    {
      "id": "source-record-storage",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/record-storage/items"
        },
        {
          "methods": ["GET"],
          "pathPattern": "/record-storage/items/{itemId}"
        },
        {
          "methods": ["DELETE"],
          "pathPattern": "/record-storage/items/{itemId}"
        },
        {
          "methods": ["GET"],
          "pathPattern": "/record-storage/logs"
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "1.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": ["POST"],
          "pathPattern": "/_/tenant"
        }
      ]
    }
  ],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerArgs": {
      "HostConfig": {"PortBindings": {"8081/tcp": [{"HostPort": "%p" }] } }
    },
    "dockerPull": false
  }
}
